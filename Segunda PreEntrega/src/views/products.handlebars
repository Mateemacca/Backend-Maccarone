

<div>
    productos
</div>

{{#each payload}}
<div class="card my-4 mx-auto w-">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                <p>Codigo: {{code}}</p>
                <p>Precio: ${{price}}</p>
               <button id='{{this._id}}' class="btn btn-primary fw-semibold add-to-cart-btn">Agregar al Carrito</button>
</div>
{{/each}}


<div class="d-flex justify-content-center my-4 gap-3 align-items-center text-center">
{{#if hasPrevPage}}
<button class="btn btn-primary "><a href="/products?page={{prevPage}}" class="text-white fw-bold text-decoration-none">Pagina Anterior</a></button>
{{/if}}
<p class="fw-semibold align-self-center mb-0"> Page: {{page}}</p>
{{#if hasNextPage}}
<button class="btn btn-primary"><a href="/products?page={{nextPage}}" class="text-white fw-bold text-decoration-none">Pagina Siguiente</a></button>
{{/if}}
</div>

<script src="/js/products.js"></script>