<link rel="stylesheet" href="css/login.css" />
<div class="section mx-auto my-auto h-[100vh]">
  <div class="container my-auto h-[100vh]">
    <div class="row full-height justify-content-center">
      <div class="card-3d-wrap mx-auto">
        <div class="card-3d-wrapper">
          <div class="card-front">
            <div class="center-wrap">
              <div class="section text-center">
                <h4 class="mb-4 pb-3 text-white text-2xl">Restore your password</h4>
                <form action="/api/session/restore-password" method="post">
                  <div class="form-group">
                    <input
                      type="email"
                      name="email"
                      class="form-style"
                      placeholder="Email"
                      id="logemail"
                      autocomplete="off"
                    />
                    <i class="input-icon uil uil-at"></i>
                  </div>
                  <div class="form-group mt-2">
                    <input
                      type="password"
                      name="password"
                      class="form-style"
                      placeholder="Password"
                      id="logpass"
                      autocomplete="off"
                    />
                    <i class="input-icon uil uil-lock-alt"></i>
                  </div>
                  <button type="submit" class="btn mt-4">Restore</button>
                </form>
                {{#if samePassword}}
                  <p class="text-red">No puedes usar tu contrase√±a actual!</p>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>