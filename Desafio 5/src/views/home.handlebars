<link rel="stylesheet" href="css/index.css">
<div>
    <h1 class="font-bold text-2xl">Lista de productos</h1>
    <ul>
        {{#each productos}}
            <li class="my-4 max-w-lg">
                <h2 class="font-bold text-xl">{{title}}</h2>
                <p>{{description}}</p>
                <p>Codigo: <strong>{{code}}</strong></p>
                <p>Precio: <strong>${{price}}</strong></p>
                <hr class="w-full">
            </li>
        {{else}}
            <p>No hay productos disponibles</p>
        {{/each}}
    </ul>
</div>

