{{#each products.payload}}

<div class="card p-4 my-4 mx-auto col-md-4">
    <div class=" ">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                <p>Category: {{category}}</p>
                <p>Code: {{code}}</p>
                <p>Price: <strong>${{price}}</strong></p>
